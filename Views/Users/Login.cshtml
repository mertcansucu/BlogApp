@model LoginViewModel

<div class="row">
    <div class="col-12">
        <h1>Login</h1>
        <form action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><!--model de hataları göstermesini için buraya ekledim-->
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for ="Email" class="form-control">
                <!--type="email" name="Email" id="Email" bunlara artık gerek yok çünkü modelden direk alıyorum-->
                <span asp-validation-for="Email" class="text-danger"></span><!--Email ile olan hataları sadece söyler-->
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span><!--Password ile olan hataları sadece söyler-->
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>