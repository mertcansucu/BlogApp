<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css"><!--bootstrap bağlantısı-->
    <!--
        bootstrap dosyalarını proje içine aktif etmek için yazdığım komutlar:
            libman init -p cdnjs
            libman install bootstrap@5.3.1 -d wwwroot/lib/bootstrap

    -->
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css"><!--bootstrap bağlantısı-->
    <link rel="stylesheet" href="/css/style.css">

    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a href="/posts" class="navbar-brand">
                <i class="bi bi-code"></i> BlogApp
                <!--icon eklemek için eklemem lazım gerekli kod:
                    libman install bootstrap-icons@1.10.5 -d wwwroot/lib/bootstrap-icons

                -->
            </a>
            <ul class="navbar-nav ms-auto">
                @if(User.Identity!.IsAuthenticated){
                    <!--User.Identity!.IsAuthenticated kullanıcı gişi olduysa görünecekleri söyledim ve identity bilgisi boş olma ihtimaline karşı '!' eklediö-->
                    <li class="nav item">
                        <a href="#" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav item">
                        <a href="/users/logout" class="nav-link">Logout</a>
                    </li>
                }else{
                    <li class="nav item">
                        <a href="/users/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav item">
                        <a href="/users/register" class="nav-link">Register</a>
                    </li>
                }
                
            </ul>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody() <!--Bütün viewler için ortak çağrılacak bir yapı oluşturdum 
            _ViewStart => içinde de bunu ekledim-->
    </div>
    @RenderSection("Scripts", required: false)
    
</body>
</html>